local ScreenGui = Instance.new("ScreenGui")
local Fps = Instance.new("TextLabel")
local Ping = Instance.new("TextLabel")
local Timer = Instance.new("TextLabel")

ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

local function createTextLabel(name, position, text)
    local label = Instance.new("TextLabel")
    label.Name = name
    label.Parent = ScreenGui
    label.BackgroundTransparency = 1
    label.Position = position
    label.Size = UDim2.new(0, 80, 0, 25)
    label.Font = Enum.Font.GothamBold
    label.Text = text
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.TextSize = 10
    label.TextScaled = false
    label.TextXAlignment = Enum.TextXAlignment.Center
    label.TextYAlignment = Enum.TextYAlignment.Center
    return label
end

local totalWidth = 80 * 3 + 5 * 2
local startX = (ScreenGui.AbsoluteSize.X - totalWidth) / 2

Fps = createTextLabel("Fps", UDim2.new(0, startX, 1, -115), "FPS: 00")
Timer = createTextLabel("Timer", UDim2.new(0, startX + 85, 1, -115), "TIMER: 00:00:00")
Ping = createTextLabel("Ping", UDim2.new(0, startX + 170, 1, -115), "PING: 00")

local updateInterval = 1
local lastUpdateTime = 0
local fpsValue = 0
local startTime = tick()

local function updateFPS()
    fpsValue = math.min(math.round(1 / game:GetService("RunService").Heartbeat:Wait()), 60)
    Fps.Text = string.format("FPS: %02d", fpsValue)
end

local function updatePing()
    local pingValue = game:GetService("Stats").Network.ServerStatsItem["Data Ping"]:GetValue() or 0
    Ping.Text = string.format("PING: %02d", math.round(pingValue))
end

local function updateTimer()
    local elapsedTime = tick() - startTime
    local totalSeconds = math.floor(elapsedTime)
    
    local hours = math.min(math.floor(totalSeconds / 3600), 99)
    local minutes = math.min(math.floor((totalSeconds % 3600) / 60), 59)
    local seconds = math.min(totalSeconds % 60, 59)

    Timer.Text = string.format("TIMER: %02d:%02d:%02d", hours, minutes, seconds)
end

game:GetService("RunService").Heartbeat:Connect(function()
    local currentTime = tick()

    if currentTime - lastUpdateTime >= updateInterval then
        updateFPS()
        updatePing()
        updateTimer()
        lastUpdateTime = currentTime
    end
end)
